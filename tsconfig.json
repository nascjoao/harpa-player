{
    "compilerOptions": {
        "types": ["@testing-library/jest-dom"],
        "target": "ES5",
        "module": "ESNext",
        "declaration": true,
        "outDir": "dist",
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "isolatedModules": true,
        "strict": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@harpa-player": ["src/index.ts"],
            "@/*": ["src/*"]
        }
    },
    "include": ["src"]
}
